{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.5/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "http_port_min": "8090",
      "http_port_max": "9000",
      "iso_checksum": "0d9dc37b5dd4befa1c440d2174e88a87",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `mirror`}}/6.5/isos/x86_64/CentOS-6.5-x86_64-minimal.iso",
      "output_directory": "packer-centos-6.5-x86_64-virtualbox",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1536"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "aerospike-centos-6.5-x86_64"
    },
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.5/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_os_type": "centos-64",
      "http_directory": "http",
      "http_port_min": "8090",
      "http_port_max": "9000",
      "iso_checksum": "0d9dc37b5dd4befa1c440d2174e88a87",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `mirror`}}/6.5/isos/x86_64/CentOS-6.5-x86_64-minimal.iso",
      "output_directory": "packer-centos-6.5-x86_64-vmware",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "aerospike-centos-6.5-x86_64",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "1536",
        "numvcpus": "2"
      }
    }
  ],
"post-processors": [{
        "output": "build/{{.Provider}}/as_centos-6.5-x86_64.box",
        "vagrantfile_template": "tpl/vagrantfile.tpl",
        "type": "vagrant"
    }],
  "provisioners": [
    {
      "environment_vars": [
        "AS_VERSION={{user `as_version`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/centos/update.sh",
        "scripts/centos/fix-slow-dns.sh",
        "scripts/common/sshd.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/vmtools2.sh",
        "scripts/centos/aerospike.sh",
        "scripts/common/minimize.sh",
        "scripts/centos/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "as_version": "provisionerless",
    "mirror": "http://mirrors.kernel.org/centos"
  }
}
